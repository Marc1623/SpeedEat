@model DTO.Customers

@{
    ViewData["Title"] = "Index";
}

<h2>Customer Login</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomersLogin" class="control-label"></label>
                <input asp-for="CustomersLogin" class="form-control" />
                <span asp-validation-for="CustomersLogin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomersPassword" class="control-label"></label>
                <input asp-for="CustomersPassword" class="form-control" type="password"/>
                <span asp-validation-for="CustomersPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success pull-right" />
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Are you a Deliverer ?", "Deliverer")
</div>

