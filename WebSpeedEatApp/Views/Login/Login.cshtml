@model DTO.Customers

@{
    ViewData["Title"] = "Login";
}

<h2>Index</h2>

<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomersLogin" class="control-label"></label>
                <input asp-for="CustomersLogin" class="form-control" type="email" />
                <span asp-validation-for="CustomersLogin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomersPassword" class="control-label"></label>
                <input asp-for="CustomersPassword" class="form-control" type="password" />
                <span asp-validation-for="CustomersPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
